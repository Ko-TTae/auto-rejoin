{
    "manifest_version": 3,
    "name": "Auto Click Button",
    "version": "1.0",
    "description": "Watch for a specific button and click it automatically",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}